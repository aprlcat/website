---
interface Props {
  title: string;
  description?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { title, description, size } = Astro.props;

const sizeFallback = size || 'sm';

const sizeTitle = {
  xs: 'text-lg',
  sm: 'text-2xl',
  md: 'text-3xl',
  lg: 'text-4xl',
}[sizeFallback];

const sizeDescription = {
  xs: 'text-sm',
  sm: 'text-sm',
  md: 'text-md',
  lg: 'text-lg',
}[sizeFallback];
---

<div class=`flex flex-col gap-2 w-full ${ sizeFallback == "sm" ? "mb-10" : "mb-4" }` >
  <h1 class={sizeTitle} >{title}</h1>
  <h2 class={sizeDescription}>{description}</h2>
</div>
